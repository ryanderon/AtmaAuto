<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgcustomer">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="PENGGUNA"
        android:textColor="@color/bpblack"
        android:textSize="40dp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="374dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:layout_marginTop="130dp"
        android:layout_marginEnd="18dp"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/newCustomer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/motor"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:layout_width="318dp"
                android:layout_height="174dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="8dp"
                android:text="CEK MOTOR"
                android:textColor="@color/bpDark_gray"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/oldCustomer"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/sparepart"
            android:layout_marginTop="40dp"
            android:orientation="vertical"
            android:padding="16dp">


            <ImageView
                android:layout_width="332dp"
                android:layout_height="170dp"
                android:layout_gravity="center"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SPAREPART"
                android:layout_marginTop="8dp"
                android:textColor="@color/bpDark_gray"
                android:textSize="30dp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
